      <a id="nav" href="/specialities"><li>Specialities</li></a>
      <a id="nav" href="/stylists"><li>Stylists</li></a>
      <a id="nav" href="/clients"><li>Clients</li></a>
    </ul>
  </div>
</nav>




    @RenderBody()
  
</body>
</html>