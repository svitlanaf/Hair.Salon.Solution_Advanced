@using HairSalon.Models;
@using System;
@using System.Collections.Generic;
@{ Layout = "_Layout"; }

<style>
  .container {margin: 20px; margin-left: 160px; margin-right: 50px;}

  body {background-color: #232323;}

  h1 {color: tomato;}

  .row {margin-top: 40px; margin-bottom: 40px;}

  .btn:hover
  {
    color: tomato;
  }

  .col-md-6 {margin-top: 50px; margin-bottom: 20px;}
 

  </style>

<div class="container">
<h1>Stylists</h1>

@if(Model.Count < 1)
{
    <p>There are no stylists to display! To add a new stylist you need to select their speciality first.</p>
}

@if (Model.Count != 0)
{
  
    @foreach (var stylist in Model)
    {
      <h5><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></h5>
    }
  
}

<br>
<form method="post" action='/stylists/deleteall'>
  <button class="btn"  type="submit">Delete all</button>
</form>
</div>