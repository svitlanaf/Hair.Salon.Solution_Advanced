@using HairSalon.Models;
@using System;
@using System.Collections.Generic;

<h1>Snappy Snips</h1>
<hr />
<h2>Stylists:</h2>

@if(Model.Count < 1)
{
    <p>There are no stylists to display! To add a new stylist you need to select their speciality first.</p>
}

@if (Model.Count != 0)
{
  
    @foreach (var stylist in Model)
    {
      <a href="/stylists/@stylist.GetId()">@stylist.GetName()</a><br>
    }
  
}

