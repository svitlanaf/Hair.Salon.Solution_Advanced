@using HairSalon.Models;
@using System;
@using System.Collections.Generic;
@{ Layout = "_Layout"; }

<style>
  .container {margin: 20px; margin-left: 160px; margin-right: 50px;}

  body {background-color: #232323;}

  h1 {color: tomato;}

  .row {margin-top: 40px; margin-bottom: 40px;}

  .btn:hover
  {
    color: tomato;
  }

  .col-md-6 {margin-top: 50px; margin-bottom: 20px;}
 

  </style>

<div class="container">
<h1>Add a stylist</h1>

<form action="/stylists" method="post">
  <label for="name">Stylist name:</label>
 <input required id="name" name="name" type="text"><br>
 <label for="information">Information:</label><br>
 <textarea class= "k-textbox" style="width: 90%; height: 70px;" required id="information" name="information" type="text" ></textarea><br>


  <select id='specialityId' name='specialityId' type='text'>
    @foreach (var speciality in @Model)
        {
          <option value='@speciality.GetId()'>@speciality.GetName()</option>
        }
  </select>


  <button class="btn" type="submit">Add</button>
</form>
</div>



