@using HairSalon.Models;
@using System;
@using System.Collections.Generic;

@{ Layout = "_Layout"; }


<div class="container">
<form action="/clients/@Model.GetId()/edit" method="post">
 <label >Client name:</label>
 <input  name="newName" type="text" value="@Model.GetName()"><br>
 <label >Details:</label><br>
 <textarea class= "k-textbox" style="width:90%; height: 70px;"  name="newDetails" type="text">@Model.GetDetails()</textarea><br>
 <label >Appointment date</label>
 <input  name='newAppointment' type='date' value="@Model.GetAppointment()"><br>
 
 <button class="btn" type="submit">Save</button>
 </div>